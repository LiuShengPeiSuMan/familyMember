<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.InitZuZhangActivity">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="5dp"
        android:src="@mipmap/addzuzhang" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-15dp"
        android:gravity="center_horizontal"
        android:text="初始化族长信息"
        android:textColor="#3F51B5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="族长姓名:"
            android:textColor="#000000"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/zz_name"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginLeft="2dp"
            android:background="@drawable/email_login"
            android:gravity="center_vertical"
            android:hint="请输入族长姓名"
            android:inputType="text"
            android:paddingLeft="4dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="登录邮箱:"
            android:textColor="#000000"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/zz_email"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginLeft="2dp"
            android:background="@drawable/email_login"
            android:gravity="center_vertical"
            android:hint="请输入登录邮箱"
            android:inputType="textEmailAddress"
            android:paddingLeft="4dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="登录账号:"
            android:textColor="#000000"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/zz_account"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginLeft="2dp"
            android:background="@drawable/email_login"
            android:digits="0123456789abcdefghigklmnopqrstuvwxyz"
            android:gravity="center_vertical"
            android:hint="请输入登录账号"
            android:inputType="text"
            android:paddingLeft="4dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="登录密码:"
            android:textColor="#000000"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/zz_pwd"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginLeft="2dp"
            android:background="@drawable/email_login"
            android:gravity="center_vertical"
            android:hint="请输入登录密码"
            android:inputType="textPassword"
            android:paddingLeft="4dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="确认密码:"
            android:textColor="#000000"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/zz_pwdTwo"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginLeft="2dp"
            android:background="@drawable/email_login"
            android:gravity="center_vertical"
            android:hint="请再次确认登录密码"
            android:inputType="textPassword"
            android:paddingLeft="4dp" />
    </LinearLayout>

    <Button
        android:id="@+id/zz_ok"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:background="@drawable/button"
        android:text="确 认"
        android:textColor="#ffffff"
        android:textSize="20dp" />
</LinearLayout>