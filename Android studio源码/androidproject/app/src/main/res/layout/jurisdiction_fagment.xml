<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#2196F3"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ju_count"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:text="共0条"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/ju_edittext"
            android:layout_width="150dp"
            android:layout_height="32dp"
            android:background="@drawable/examine_spinner"
            android:gravity="center_vertical"
            android:hint="请输入姓名"
            android:paddingLeft="20dp" />

        <ImageView
            android:id="@+id/ju_search"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/examine_search" />

        <ImageView
            android:id="@+id/ju_add"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="30dp"
            android:src="@mipmap/add_house" />
    </LinearLayout>

    <ListView
        android:id="@+id/ju_list"
        android:layout_margin="2dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>